<form id="goal_form" action="<%= @goal.persisted? ? goal_url(@goal) : goals_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% if @goal.persisted? %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label>
    Description:
    <input type="text" name="goal[description]" value="<%= @goal.description %>">
  </label>

  <label>Private
    <input type="checkbox" name="goal[private]">
  </label>

  <input type="submit" value="<%= @goal.persisted? ? 'Update Goal!' : 'Create Goal!' %>">
</form>
